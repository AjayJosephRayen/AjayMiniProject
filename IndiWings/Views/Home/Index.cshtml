@{
    ViewData["Title"] = "Home Page";
}
<style>
    
    *{margin:0; padding:0;
        
    }
    .disp{
        background-image: url(../images/flight5.jpg),linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1));
        height: 100vh;background-size:cover;background-position:center;
    }
    
    .welcome{
        position: absolute;
        top: 10%;
        left: 27%;
        width: 100%;
        font-size: 70px;
        color: white;
        font-family: 'MerriweatherUltraBold Italic';
        display: flex;
    }
    .para{
        position: absolute;
        top: 40%;
        left: 10%;
        width: 100%;
        
        
        color: white;
        font-family: https://kinsta.com/blog/web-safe-fonts/#10-copperplate-gothic;
       
    }
    .button{
        position:absolute;
        top:40%;
        left:70%;
        

    }
    .btn{
        border:1px solid #fff;
        padding: 10px 30px;
        color:#fff;
        text-decoration:none;
        transition :0.6s ease;
    }
    .btn:hover{
        background-color:#fff;
        color:#000;
    }
</style>
<body>
    <div class="disp">
<div class="welcome">

            <h1 class="display-4"><b>WELCOME  TO   INDIWINGS</b></h1>
        </div>
    </div>

            <div class="para">
        <h1><b>The Sky is Waiting for You</b></h1>
        <p>With cheap flights, you can easily book any ticket you need to travel safely, Thanks to our </p>
               <p>detailed system of searching and booking airline tickets... </p>
            </div>
            <div class="button">
        <a asp-area="" asp-controller="Passenger" asp-action="Login" class="btn">Login</a>
        <a asp-area="" asp-controller="Passenger" asp-action="Register" class="btn">Register</a>
            </div>
    
    

</body>
